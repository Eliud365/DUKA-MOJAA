<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="drinkssystem.salesreportcontroller"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: white;">
    <children>
        <Label layoutX="200" layoutY="20" text="Sales Reports"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TableView fx:id="salesTable" layoutX="50" layoutY="60" prefWidth="500" prefHeight="250">
            <columns>
                <TableColumn fx:id="colName" text="Customer Name" prefWidth="150"/>
                <TableColumn fx:id="colDrink" text="Drink" prefWidth="100"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                <TableColumn fx:id="colBranch" text="Branch" prefWidth="100"/>
            </columns>
        </TableView>

        <Button layoutX="50" layoutY="330" text="Back" onAction="#handleBack"
                style="-fx-background-color: #5064c3; -fx-text-fill: white;" />
    </children>
</AnchorPane>

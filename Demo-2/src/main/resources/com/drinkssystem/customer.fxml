<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.drinkssystem.customercontroller">
    <children>
        <Label layoutX="121.0" layoutY="30.0" prefHeight="33.0" prefWidth="435.0" text="WELCOME TO DUKA MOJA ENTERPRICE LTD" textAlignment="CENTER">
            <font><Font name="Century" size="18.0" /></font>
        </Label>
        <Label layoutX="264.0" layoutY="63.0" prefHeight="24.0" prefWidth="132.0" text="Make Your Order" textFill="#5064c3">
            <font><Font name="Century" size="13.0" /></font>
        </Label>
        <Label layoutX="127.0" layoutY="120.0" text="Name" />
        <TextField fx:id="nameField" layoutX="168.0" layoutY="116.0" promptText="Enter Your Name" />

        <Label layoutX="360.0" layoutY="120.0" text="Branch Name" />
        <ComboBox fx:id="branchComboBox" layoutX="441.0" layoutY="116.0" prefWidth="132.0" />

        <Label layoutX="126.0" layoutY="191.0" text="Drink Of Choice" />
        <ComboBox fx:id="drinkComboBox" layoutX="218.0" layoutY="186.0" prefWidth="120.0" promptText="Select Drink" />

        <Label layoutX="360.0" layoutY="191.0" text="Quantity" />
        <TextField fx:id="quantityField" layoutX="441.0" layoutY="186.0" prefWidth="84.0" promptText="No of Drinks" />

        <Label layoutX="123.0" layoutY="254.0" prefWidth="71.0" text="Total Price" />
        <TextField fx:id="totalPriceField" layoutX="194.0" layoutY="250.0" prefWidth="132.0" />

        <Button fx:id="submit" layoutX="310.0" layoutY="302.0" onAction="#handlesubmit" prefWidth="65.0" style="-fx-background-color: #5064c3; -fx-border-color: black;" text="SUBMIT" />

        <VBox layoutX="1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="113.0" style="-fx-background-color: #5064c3;">
            <children>
                <Label alignment="CENTER" depthTest="ENABLE" prefHeight="64.0" prefWidth="79.0" text="CUSTOMER ORDERS" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font></Label>
            </children>
        </VBox>
      <Button fx:id="back" layoutX="499.0" layoutY="346.0" mnemonicParsing="false" onAction="#handleback" style="-fx-border-color: #5064c3;" text="Back" textFill="#5064c3" />
    </children>
</AnchorPane>
